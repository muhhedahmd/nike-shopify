<section class="hero-landing">
    <div>
      <div class="hero-landing__background">
        <div class="hero-landing__background__wide">
            {% if section.settings.wide_background_image != blank %}
                {{ section.settings.wide_background_image | image_url: width: 2000 | image_tag }}
                
                {% else %}
                {{ "product-apparel-1" |  placeholder_svg_tag }}
            {% endif %}
        </div>
        <div class="hero-landing__background__small">
          {% if section.settings.small_background_image != blank %}
            {{ section.settings.small_background_image | image_url: width: 1000 | image_tag }}
            {% else %}
            {{ "product-apparel-2" |  placeholder_svg_tag }}
          {% endif %}
        </div>
      </div>
      <div class="hero-landing__content">
        <div class="hero-landing__content__text">
          <h1 style="color: {{ section.settings.text_color }}">{{ section.settings.title }}</h1>
          {% comment %} <p style="color: {{ section.settings.text_color }}">{{ section.settings.description }}</p> {% endcomment %}
          <a href="{{ section.settings.button_link }}" style="background-color: {{ section.settings.button_color }}" class="button">{{ section.settings.button_text }}</a>
        </div>
      </div>
    </div>
</section>


